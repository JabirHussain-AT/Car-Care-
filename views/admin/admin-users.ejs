                <!-- Table -->
                <div class="table-responsive mt-4 ml-3 me-3">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Sr. No</th>
                                <th scope="col">Name</th>
                                <th scope="col">UserID</th>
                                <!-- <th scope="col">Password</th> -->
                                <th scope="col">Email ID</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">
                            <!-- Table rows go here -->
                            <% if(users.length> 0) 
                                {
                                for(let i=0;i<users.length;i++) { %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= users[i].Name %>
                                        </td>
                                        <td>
                                            <%= users[i]._id%>
                                        </td>
                                        <td>
                                            <%= users[i].Email %>
                                        </td>

                                        <td class="<%= users[i].Status === 'Active' ? 'active-status' : 'inactive-status' %>">
                                            <%= users[i].Status %>
                                        </td>
                                        
                                        



                                        <td>
                                            <%if(users[i].Status==="Active") {%>
                                            <a href="/admin/users/<%= users[i]._id %>" onclick="return confirm('Are you sure want to block the user')" class="btn btn-sm btn-success">Block</a>
                                            <% } else { %>
                                                <a href="/admin/users/<%= users[i]._id %>" class="btn btn-sm btn-danger">Unblock</a>
                                                <% } %>
                                        </td>
                                    </tr>
                                    <% } } %>
                        </tbody>
                    </table>
                    <% if (users.length > 0) { %>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <p>Showing <%= (currentPage - 1) * perPage + 1 %>-
                              <%= currentPage * perPage  %> results from <%= totalCount %></p>
                            <ul class="pagination">
                              <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                              <% } %>
                            </ul>
                          </div>
                          <% } else { %>
                            <p>No results found.</p>
                          <% } %>
                </div>
        </div>
       
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>