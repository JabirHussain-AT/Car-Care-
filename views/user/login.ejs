<%- include('../layout/user/layout') %>
    <link rel="stylesheet" href="/stylesheet/user-login.css">
<%- include('../partials/user-header') %> 
    <div class="container-fluid banner-login d-md-none .d-lg-block">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Login</h1>
            </div>
        </div>
    </div>

    <!-- 1 layer of login -->
    <div class="container-fluid main-layer">
        <div class="row justify-content-center align-items-center" style="height: auto;">
            <div class="col-md-5 m-4 rounded bg-light">
                <!-- Content for the left column -->
                <div class="p-3">
                    <h2>Log in</h2>
                    <div class="container-fluid">
                      <% if(locals.message.error){ %>
                          <div class="alert alert-danger" role="alert">
                              <%= message.error %>
                            </div>
                    <% } %>
                  
                    <% if(locals.message.warning){ %>
                        <div class="alert alert-danger" role="alert">
                          <%= message.banned %>
                        </div>
                    <% } %>
                    <% if(locals.message.banned){ %>
                        <div class="alert alert-danger" role="alert">
                          <%= message.banned %>
                        </div>
                    <% } %>
                    <% if(locals.message.notMatching){ %>
                        <div class="alert alert-danger" role="alert">
                          <%= message.notMatching %>
                        </div>
                    <% } %>
                    <% if(locals.message.dontHaveAnaccount){ %>
                      <p style="color: red;"></p>
                      <div class="alert alert-danger" role="alert">
                          <%= message.dontHaveAnaccount %>
                        </div>
                  <% } %>
                        <div class="row justify-content-center " style="height: 100%;">
                            <div class="col-md-7 ml-3 col-lg-5 col-xl-5 offset-xl-1">
                                <form class="form" action="/login" method="post">
                                  <!-- Email input -->
                                  <div class="form-outline  mb-2">
                                    <input type="email" id="form1Example13" name="email" placeholder="Ente your e-mail" class="form-control form-control-md mt-2" />
                                    <label class="form-label"  for="form1Example13">Email address</label>
                                    <span id="email-validation-msg" style="color: red;"></span>
                                  </div>
                        
                                  <!-- Password input -->
                                  <div class="form-outline mb-4">
                                    <input type="password" class="form-control " name="password" id="Password"
                                            placeholder="Enter new password">
                                    <label class="form-label" name="password" for="form1Example23">Password</label>
                                  </div>
                        
                                  <div class="d-flex  align-items-center mb-4">
                                    <!-- Checkbox -->
                                    <div>
                                      <!-- <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                                      <label class="form-check-label" for="form1Example3"> Remember me </label> -->
                                      <a href="/forgetPass">Forgot password?</a>
                                    </div>
                                  </div>
                                  <div class="d-flex justify-content-center align-items-center">
                                     <p style="font-size: small;">Don't you have an account? <a href="/signup"><u>Sign Up</u></a></p>
                                  </div>
                                  <!-- Submit button -->
                                  <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                        
                                </form>
                              </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5 ">
                <!-- Content for the right column -->
                <div class="img login">
                    <img src="/assets/spare.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
<!-- 2nd layer -->
<div class="container-fluid mt-0 sl">
    <div class="row" style="height: 100%;">
        <!-- Card 1 -->
        <div class="col-md-4">
            <div class="card cd-sl">
                <!-- <img src="image1.jpg" class="card-img-top" alt="Image 1"> -->
                <div class="card-body mt-5">
                    <h4 class="card-title">Free Delivery</h4>
                    <p class="card-text text-secondary">Card 1 Subtitle</p>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-4">
            <div class="card cd-sl">
                <!-- <img src="image2.jpg" class="card-img-top" alt="Image 2"> -->
                <div class="card-body mt-5">
                    <h4 class="card-title">14 Days Return</h4>
                    <p class="card-text text-secondary">For all oders over $50, consectetur adipim scing elit.</p>
                </div>
            </div>
        </div>
        <!-- card 3 -->
        <div class="col-md-4">
            <div class="card cd-sl">
                <!-- <img src="image3.jpg" class="card-img-top" alt="Image 3"> -->
                <div class="card-body mt-5">
                    <h4 class="card-title">Secure Payment</h4>
                    <p class="card-text text-secondary">100% secure payment, consectetur adipim scing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
      const emailInput = document.getElementById('email');
      const emailValidationMsg = document.getElementById('email-validation-msg');
  
      emailInput.addEventListener('input', function () {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const isEmailValid = emailRegex.test(emailInput.value);
  
        if (isEmailValid) {
          emailValidationMsg.textContent = ''; // Clear the validation message
        } else {
          emailValidationMsg.textContent = 'Invalid email format';
        }
      });

    });
  </script>
